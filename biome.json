{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"tests/**/*.ts",
			"*.js",
			"*.ts",
			".vscode/*.json",
			"assets/**/*.json"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"useSingleVarDeclarator": {
					"level": "warn"
				},
				"useTemplate": {
					"level": "warn"
				},
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noDebugger": "off",
				"noConsole": "off",
				"noFallthroughSwitchClause": "off",
				"noConfusingVoidType": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"security": {},
			"correctness": {
				"noUnusedImports": { "level": "info" },
				"noUnusedFunctionParameters": "off"
			},
			"nursery": {}
		}
	}
}
