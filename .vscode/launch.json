{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Current TS/TSX File",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/tsx",
			"args": ["${file}"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "Debug Current .mns File",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/src/cli.ts",
			"args": ["${file}"],
			"runtimeExecutable": "npx",
			"runtimeArgs": ["tsx"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "Play",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/games/play.ts",
			"args": [
				"${workspaceFolder}/games/game.npcs",
				"${workspaceFolder}/game.json",
				"${input:sentence}"
			],
			"runtimeExecutable": "npx",
			"runtimeArgs": ["tsx"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			}
		},
		{
			"name": "Launch NPCS Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"],
			"outFiles": ["${workspaceFolder}/vscode-extension/out/**/*.js"],
			"preLaunchTask": "npm: compile - vscode-extension"
		}
	],
	"inputs": [
		{
			"id": "sentence",
			"description": "What to say?",
			"type": "promptString"
		}
	]
}
