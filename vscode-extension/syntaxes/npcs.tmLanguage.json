{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NPCS",
  "scopeName": "source.npcs",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#plan-blocks" },
    { "include": "#do-while-loops" },
    { "include": "#function-definitions" },
    { "include": "#if-then-do" },
    { "include": "#if-then-return" },
    { "include": "#if-one-liners" },
    { "include": "#assignment-statements" },
    { "include": "#yielding-statements" },
    { "include": "#objects" },
    { "include": "#arrays" },
    { "include": "#ternary-expressions" },
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#function-calls" }
  ],
  "repository": {
    "base-block": {
      "patterns": [
        { "include": "#comments" },
        { "include": "#assignment-statements" },
        { "include": "#if-then-do" },
        { "include": "#if-then-return" },
        { "include": "#if-one-liners" },
        { "include": "#yielding-statements" },
        { "include": "#statements" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#function-calls" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#objects" },
        { "include": "#arrays" },
        { "include": "#ternary-expressions" }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|then|else|end if|do|while|loop|for|in|end for|plan|end plan|break|continue|return)\\b"
        },
        {
          "name": "storage.type.function",
          "match": "\\b(function|end function)\\b"
        },
        {
          "name": "keyword.operator.word",
          "match": "\\b(isa|not)\\b"
        },
        {
          "name": "constant.language.boolean",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null",
          "match": "\\b(null|undefined)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic",
          "match": "\\+|-|\\*|/|%|\\^"
        },
        {
          "name": "keyword.operator.comparison",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical",
          "match": "\\band\\b|\\bor\\b"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "variable.function",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*|\\[[^\\]]+\\])*\\s*(?=\\()"
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "name": "meta.statement.npcs",
          "match": "^\\s*(?!(?:if|then|else|end if|do|while|loop|for|in|end for|plan|end plan|function|end function|return|break|continue)\\b)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*|\\[[^\\]]+\\])*)\\s+(?!\\=)(.+)$",
          "captures": {
            "1": { "name": "entity.name.function.statement.npcs" },
            "2": { "name": "meta.statement.arguments.npcs" }
          }
        }
      ]
    },
    "assignment-statements": {
      "patterns": [
        {
          "name": "meta.assignment",
          "match": "^\\s*(?!(?:if|then|else|end if|do|while|loop|for|in|end for|plan|end plan|function|end function|return|break|continue)\\b)([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*|\\[[^\\]]+\\])*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.other" },
            "2": { "name": "keyword.operator.assignment" }
          }
        }
      ]
    },
    "yielding-statements": {
      "patterns": [
        {
          "name": "meta.statement",
          "begin": "^\\s*(?!(?:if|then|else|end if|do|while|loop|for|in|end for|with|end with|function|end function|return|break|continue)\\b)([A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*|\\[[^\\]]+\\])*)\\s+(?!\\=)",
          "beginCaptures": {
            "1": { "name": "variable.function" }
          },
          "end": "$",
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#operators" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#objects" },
            { "include": "#arrays" },
            { "name": "punctuation.separator", "match": "," }
          ]
        }
      ]
    },
    "objects": {
      "patterns": [
        {
          "name": "meta.object",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#objects" },
            { "include": "#arrays" },
            { "name": "punctuation.separator.key-value", "match": ":" },
            { "name": "punctuation.separator.dictionary", "match": "," }
          ]
        }
      ]
    },
    "arrays": {
      "patterns": [
        {
          "name": "meta.array",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#objects" },
            { "include": "#arrays" },
            { "name": "punctuation.separator.array", "match": "," }
          ]
        }
      ]
    },
    "ternary-expressions": {
      "patterns": [
        {
          "name": "meta.ternary-expression",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*|\\d+(?:\\.\\d+)?|\"[^\"]*\"|'[^']*')\\s+(if)\\s+([^\\s]+(?:\\s+[^\\s]+)*)\\s+(else)\\s+([a-zA-Z_][a-zA-Z0-9_]*|\\d+(?:\\.\\d+)?|\"[^\"]*\"|'[^']*')",
          "captures": {
            "1": { "name": "meta.ternary.true-value" },
            "2": { "name": "keyword.control.conditional" },
            "3": { "name": "meta.ternary.condition" },
            "4": { "name": "keyword.control.conditional" },
            "5": { "name": "meta.ternary.false-value" }
          }
        }
      ]
    },
    "if-then-do": {
      "patterns": [
        {
          "name": "meta.if.then-do",
          "match": "^\\s*(if)\\s+([^\\n]*?)\\s+(then)\\s+(do)\\b",
          "captures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "meta.if.condition" },
            "3": { "name": "keyword.control" },
            "4": { "name": "keyword.control" }
          }
        }
      ]
    },
    "if-then-return": {
      "patterns": [
        {
          "name": "meta.if.then-return",
          "begin": "^\\s*(if)\\s+",
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          },
          "end": "\\s+(then)\\s+(return)\\s+",
          "endCaptures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "keyword.control" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#operators" },
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#objects" },
            { "include": "#arrays" },
            { "include": "#function-calls" }
          ]
        }
      ]
    },
    "if-one-liners": {
      "patterns": [
        {
          "name": "meta.if.one-line",
          "begin": "^\\s*(if)\\s+(?=[^\\n]*\\bthen\\b)",
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          },
          "end": "$",
          "patterns": [
            {
              "name": "meta.if.condition",
              "match": "[^\\n]*?\\b(then)\\b",
              "captures": {
                "1": { "name": "keyword.control" }
              }
            },
            {
              "name": "meta.if.then-body",
              "begin": "\\G\\s*",
              "end": "$",
              "patterns": [
                {
                  "name": "keyword.control",
                  "match": "\\b(do|while|loop|break|continue|return)\\b"
                },
                {
                  "name": "meta.statement",
                  "begin": "\\G\\s*(?!(?:do|while|loop|break|continue|return)\\b)([A-Za-z_][A-Za-z0-9_]*(?:\\.[A-Za-z_][A-Za-z0-9_]*|\\[[^\\]]+\\])*)\\s+(?!\\=)",
                  "beginCaptures": {
                    "1": { "name": "variable.function" }
                  },
                  "end": "$",
                  "patterns": [
                    { "include": "#strings" },
                    { "include": "#numbers" },
                    { "include": "#objects" },
                    { "include": "#arrays" },
                    { "name": "punctuation.separator", "match": "," }
                  ]
                },
                { "include": "#keywords" },
                { "include": "#operators" }
              ]
            }
          ]
        }
      ]
    },
    "function-definitions": {
      "patterns": [
        {
          "name": "meta.function.named",
          "begin": "^\\s*(function)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "beginCaptures": {
            "1": { "name": "storage.type.function" },
            "2": { "name": "entity.name.function" },
            "3": { "name": "punctuation.definition.parameters.begin" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.definition.parameters.end" }
          },
          "patterns": [
            { "include": "#function-parameters" }
          ]
        },
        {
          "name": "meta.function.anonymous",
          "begin": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)\\s*(function)\\s*(\\()",
          "beginCaptures": {
            "1": { "name": "entity.name.function" },
            "2": { "name": "keyword.operator.assignment" },
            "3": { "name": "storage.type.function" },
            "4": { "name": "punctuation.definition.parameters.begin" }
          },
          "end": "\\)",
          "endCaptures": {
            "0": { "name": "punctuation.definition.parameters.end" }
          },
          "patterns": [
            { "include": "#function-parameters" }
          ]
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "name": "meta.parameter.default",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)\\s*([^,)]+)",
          "captures": {
            "1": { "name": "variable.parameter" },
            "2": { "name": "keyword.operator.assignment" },
            "3": { "name": "meta.default-value" }
          }
        },
        {
          "name": "variable.parameter",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "punctuation.separator.parameter",
          "match": ","
        }
      ]
    },
    "do-while-loops": {
      "patterns": [
        {
          "name": "meta.do-while-loop",
          "begin": "^\\s*(do)\\s+(while)\\s+",
          "beginCaptures": {
            "1": { "name": "keyword.control" },
            "2": { "name": "keyword.control" }
          },
          "end": "(?=^\\s*(while|loop)\\b)",
          "endCaptures": {
            "1": { "name": "keyword.control" }
          },
          "patterns": [
            { "include": "#base-block" },
            { "include": "#while-clauses" }
          ]
        },
        {
          "name": "meta.do-loop",
          "begin": "^\\s*(do)\\s*$",
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          },
          "end": "(?=^\\s*(while|loop)\\b)",
          "endCaptures": {
            "1": { "name": "keyword.control" }
          },
          "patterns": [
            { "include": "#base-block" },
            { "include": "#while-clauses" }
          ]
        }
      ]
    },
    "while-clauses": {
      "patterns": [
        {
          "name": "meta.while-clause",
          "begin": "^\\s*(while)\\s+",
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          },
          "end": "(?=^\\s*(while|loop)\\b)",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "plan-blocks": {
      "patterns": [
        {
          "name": "meta.plan-block",
          "begin": "^\\s*(plan)\\s+",
          "beginCaptures": {
            "1": { "name": "keyword.control" }
          },
          "end": "^\\s*(end plan)\\b",
          "endCaptures": {
            "1": { "name": "keyword.control" }
          },
          "patterns": [
            { "include": "#base-block" }
          ]
        }
      ]
    }
  }
}